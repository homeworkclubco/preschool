{
    "name": "@hc/preschool",
    "version": "0.0.1",
    "description": "A minimal, extensible CSS framework and web component library",
    "source": "src/index.ts",
    "files": [
        "dist",
        "README.md",
        "LICENSE"
    ],
    "targets": {
        "main": {
            "source": "src/index.ts",
            "optimize": true,
            "outputFormat": "commonjs"
        },
        "module": {
            "source": "src/index.ts",
            "optimize": true,
            "outputFormat": "esmodule"
        },
        "browser": {
            "source": "src/index.ts",
            "optimize": true,
            "outputFormat": "esmodule",
            "includeNodeModules": true
        },
        "styles": {
            "source": "src/styles/index.css",
            "distDir": "./dist",
            "outputFormat": "global"
        },
        "styles-wordpress": {
            "source": "src/styles/index.wordpress.css",
            "distDir": "./dist",
            "outputFormat": "global"
        }
    },
    "main": "dist/preschool.cjs",
    "module": "dist/preschool.mjs",
    "browser": "dist/preschool.browser.js",
    "style": "dist/styles/index.css",
    "exports": {
        ".": {
            "import": "./dist/preschool.mjs",
            "require": "./dist/preschool.cjs",
            "types": "./dist/preschool.d.ts"
        },
        "./styles": "./dist/styles/index.css",
        "./styles/wordpress": "./dist/styles/index.wordpress.css"
    },
    "@parcel/transformer-css": {
        "drafts": {
            "nesting": true
        }
    },
    "scripts": {
        "dev": "parcel serve src/**/*.html",
        "watch": "parcel watch",
        "build": "parcel build",
        "prepublishOnly": "npm run build",
        "preview": "parcel serve dist/preschool.js",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:ui": "vitest --ui",
        "format": "prettier --write \"**/*.{js,ts,css,html,json,md}\"",
        "format:check": "prettier --check \"**/*.{js,ts,css,html,json,md}\"",
        "docs:dev": "cd docs && npm run dev",
        "docs:build": "cd docs && npm run build",
        "docs:preview": "cd docs && npm run preview"
    },
    "author": "",
    "license": "MIT",
    "dependencies": {
        "@parcel/bundler-library": "^2.16.0",
        "@swc/helpers": "^0.5.17",
        "es-toolkit": "^1.40.0",
        "lenis": "^1.3.11",
        "lit": "^3.2.1",
        "postcss-import-ext-glob": "^2.1.1",
        "postcss-ruler": "^1.1.0",
        "postcss-utopia": "^1.1.0",
        "postcss-value-parser": "^4.2.0"
    },
    "devDependencies": {
        "@parcel/packager-ts": "^2.16.0",
        "@parcel/transformer-typescript-types": "^2.16.0",
        "@vitest/browser": "^3.2.4",
        "@vitest/ui": "^3.2.4",
        "axe-core": "^4.10.2",
        "buffer": "^6.0.3",
        "parcel": "^2.16.0",
        "playwright": "^1.49.1",
        "postcss": "^8.4.49",
        "postcss-custom-media": "^11.0.4",
        "postcss-fluid": "^1.4.2",
        "postcss-import": "^16.1.1",
        "postcss-nesting": "^13.0.1",
        "prettier": "^3.6.2",
        "typescript": "^5.9.3",
        "vitest": "^3.2.4"
    }
}
